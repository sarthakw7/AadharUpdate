@model AadharDetailsViewModel

@{
    ViewData["Title"] = "Delete Aadhar Details";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white text-center">
            <h4 class="mb-0">Delete Aadhar Record</h4>
        </div>
        <div class="card-body text-center">
            <p class="lead">Are you sure you want to delete this record?</p>

            <dl class="row justify-content-center">
                <dt class="col-sm-4">Full Name:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Aadhar Number:</dt>
                <dd class="col-sm-8">@Model.AadharNumber</dd>

                <dt class="col-sm-4">Mobile Number:</dt>
                <dd class="col-sm-8">@Model.MobileNumber</dd>

                <dt class="col-sm-4">Date of Birth:</dt>
                <dd class="col-sm-8">@Model.DateOfBirth</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Address:</dt>
                <dd class="col-sm-8">@Model.Address</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="AadharNumber" />
                <button type="submit" class="btn btn-danger px-4">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 500px;
        margin: auto;
    }

    .form-label {
        font-weight: 600;
    }

    .lead {
        font-weight: 500;
        color: #333;
    }
</style>

